<h1>Listado de productos</h1>
<section class="container">
    <div class="row">
        <div class="col-1"></div>
        <div class="col-10">
            <% if (productos) { %>
                <table class="table table-dark">
                    <thead>
                        <tr class="table-dark">
                            <th class="table-dark" scope="col">Producto</th>
                            <th class="table-dark" scope="col">Precio</th>
                            <th class="table-dark" scope="col">Imagen</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% productos.forEach(function(producto){ %>
                            <tr class="table-dark">
                                <td class="table-dark"><%- producto.description %></th>
                                <td class="table-dark"><%- producto.price %></td>
                                <td class="table-dark"><img src="<%- producto.url %>"></td>
                            </tr>
                        <% }); %> 
                    </tbody>
                </table>
            <% } else { %> 
                    <div>
                        <p>No se econtraron productos</p>
                    </div>
            <% } %>
        </div>
        <div class="col-1"></div>
    </div>
</section>